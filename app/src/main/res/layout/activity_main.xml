<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imageprocess.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_process_original"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/image_process_negative"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_process_retro"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/image_process_grey"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_process_black_white"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/image_process_relief"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_process_grey_white"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/image_process_blur"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

</LinearLayout>
